<div id="signup">
	<h1>Comece a compartilhar livros</h1>
	<h2>Preencha o formul√°rio para criar uma conta</h2>
	
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <p><%= f.label :name, "Nome" %><br />
	  <%= f.text_field :name%></p>

	  <p><%= f.label :email, "E-mail" %><br />
	  <%= f.email_field :email %></p>

	  <p><%= f.label :password, "Senha" %><br />
	  <%= f.password_field :password %></p>

	  <p><%= f.label :password_confirmation, "Confirme a senha" %><br />
	  <%= f.password_field :password_confirmation %></p>

	  <p><%= f.submit "Criar minha conta" %></p>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
</div>